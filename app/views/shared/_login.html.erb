<% if current_user %>
	<p>Hello <%= current_user.fname %> | 
		<%= link_to 'sign out', logout_path, method: :delete %>
			| 
		<%= link_to 'new post', new_post_path %>
	</p>
<% else %>
	<%= form_tag(signin_path, method: :post) do %>
		<%= label_tag :username %>
		<%= text_field_tag :username %>
		<%= label_tag :password %>
		<%= password_field_tag :password %>
		<%= submit_tag "login" %>
	<% end %>
<% end %>