<h1 data-confirm="hello!">Listing all users</h1>

<p><%= link_to 'new user', new_user_path %></p>

<ul>
	<% @users.each do |user| %>
		<li>
			<% if user.avatar.url(:thumb) != '/avatars/thumb/missing.png' %>
				<%= image_tag user.avatar.url(:thumb) %>
			<% else %>
				<%= image_tag 'empty_avatar.gif', size: '50x50' %>
			<% end %>
			<%= link_to user.username, user_path(user) %>
		</li>
	<% end %>
</ul>

