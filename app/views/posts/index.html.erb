<h1 data-confirm="hello!">The Feed</h1>

<% if current_user %>
	<p><%= link_to 'new post', new_post_path %></p>
<% end %>

<ul>
	<% @recent.each do |post| %>
		<li>
			<% if post.user.avatar.url(:thumb) != '/avatars/thumb/missing.png' %>
				<%= image_tag post.user.avatar.url(:thumb) %>
			<% else %>
				<%= image_tag 'empty_avatar.gif', size: '50x50' %>
			<% end %>
			<%= link_to post.subject, post_path(post) %>
			<%= link_to post.body, post_path(post) %>
			<% if post.image.url(:thumb) != '/images/thumb/missing.png' %>
				<%= link_to image_tag(post.image.url(:thumb), :alt => 'blog post pic'), post_path(post) %>
			<% else %>
				<% nil %>
			<% end %>
		</li>
	<% end %>
</ul>

 